<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/layout" android:background="#FAFCFD">

    <TextView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059" android:shadowColor="#00E70707" android:textAlignment="center"
            android:textSize="30sp" android:background="#F5F214" android:id="@+id/box1"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Box2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/box2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.169"
            android:background="#F4F114" android:textSize="30sp" android:textAlignment="center"/>
    <TextView
            android:text="Box 3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/box3"
            android:background="#F3F014" android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/box4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/box2" app:layout_constraintStart_toEndOf="@+id/box2"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Box 4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/box4"
            android:background="#F3F014" android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/box3"
            app:layout_constraintBottom_toTopOf="@+id/box5" app:layout_constraintStart_toEndOf="@+id/box2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Box5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/box5"
            android:background="#F3F014" android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/box2"
            app:layout_constraintTop_toBottomOf="@+id/box4" android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/box2" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="This is the game"
            android:layout_width="121dp"
            android:layout_height="127dp"
            android:id="@+id/textView2" android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.476" android:layout_marginEnd="264dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Ta[ the on the pucyures mdnrhen thw fug"
            android:layout_width="234dp"
            android:layout_height="197dp"
            android:id="@+id/textView3" android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Red"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/buttonRed" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.949" android:textSize="24sp"/>
    <Button
            android:text="green"
            android:layout_width="70dp"
            android:layout_height="41dp"
            android:id="@+id/buttongreen" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/buttonRed" app:layout_constraintBottom_toBottomOf="@+id/buttonRed"
            android:textSize="24sp"/>
    <Button
            android:text="yellow"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/buttonyellow" app:layout_constraintStart_toEndOf="@+id/buttonRed"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/buttongreen"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/buttonRed" app:layout_constraintBottom_toBottomOf="@+id/buttonRed"
            android:textSize="24sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>